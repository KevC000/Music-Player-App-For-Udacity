<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.example.musicplayer">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicPlayer">
        <activity
            android:label="Music that is now playing"
            android:name=".CurrentSongActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:label="Music in your library"
            android:name=".LibraryActivity"
            android:parentActivityName=".MainActivity"
            android:exported="true"></activity>
        <activity
            android:label="Songs that are in queue"
            android:name=".QueueActivity"
            android:parentActivityName=".MainActivity"
            android:exported="true"></activity>
        <activity
            android:label="Store to purchase music"
            android:name=".StoreActivity"
            android:parentActivityName=".MainActivity"
            android:exported="false" />
        <activity
            android:label="Main menu of music player"
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>